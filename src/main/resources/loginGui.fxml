<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="550.0" prefWidth="900.0" style="-fx-background-color: #020617;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.Code.GLoginController">

    <!-- Center container -->
    <children>
        <VBox alignment="CENTER" prefHeight="550.0" prefWidth="900.0" spacing="20.0">

            <!-- App title -->
            <children>
                <Label style="-fx-text-fill: #e5e7eb; -fx-font-size: 32px; -fx-font-weight: bold;" text="MH Library System" />

                <!-- Card -->
                <VBox maxWidth="380.0" spacing="15.0" style="-fx-background-color: #0b1120;                              -fx-background-radius: 18;                              -fx-padding: 28;                              -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.55), 18, 0.2, 0, 4);">

                    <children>
                        <!-- Subtitle -->
                        <Label style="-fx-text-fill: #e5e7eb; -fx-font-size: 22px; -fx-font-weight: bold;" text="Login" />

                        <!-- Small space -->
                        <Region prefHeight="5.0" />

                        <!-- Username -->
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-text-fill: #cbd5f5; -fx-font-size: 13px;" text="Username" />
                                <TextField fx:id="txtUsername" promptText="Enter your username" style="-fx-background-color: #020617;                                                   -fx-background-radius: 10;                                                   -fx-text-fill: #e5e7eb;                                                   -fx-prompt-text-fill: #6b7280;                                                   -fx-border-color: #1d4ed8;                                                   -fx-border-radius: 10;                                                   -fx-border-width: 1;" />
                            </children>
                        </VBox>

                        <!-- Password -->
                        <VBox spacing="5.0">
                            <children>
                                <Label style="-fx-text-fill: #cbd5f5; -fx-font-size: 13px;" text="Password" />
                                <PasswordField fx:id="txtPassword" promptText="Enter your password" style="-fx-background-color: #020617;                                                       -fx-background-radius: 10;                                                       -fx-text-fill: #e5e7eb;                                                       -fx-prompt-text-fill: #6b7280;                                                       -fx-border-color: #1d4ed8;                                                       -fx-border-radius: 10;                                                       -fx-border-width: 1;" />
                            </children>
                        </VBox>

                        <!-- Buttons row -->
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <Button fx:id="btnClear" style="-fx-background-color: transparent;                                                -fx-text-fill: #9ca3af;                                                -fx-font-size: 13px;                                                -fx-border-color: #4b5563;                                                -fx-border-radius: 999;                                                -fx-background-radius: 999;                                                -fx-padding: 6 16 6 16;" text="Clear" />

                                <Button fx:id="btnLogin" defaultButton="true" onAction="#onLogin" style="-fx-background-color: #1d4ed8;                                                -fx-text-fill: #f9fafb;                                                -fx-font-size: 13px;                                                -fx-font-weight: bold;                                                -fx-background-radius: 999;                                                -fx-padding: 8 22 8 22;" text="Login" />
                            </children>
                            <padding>
                                <Insets top="10.0" />
                            </padding>
                        </HBox>

                        <!-- Sign up section -->
                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label style="-fx-text-fill: #9ca3af; -fx-font-size: 12px;" text="Don't have an account?" />
                                <Button fx:id="btnSignUp" onAction="#onSignUp" style="-fx-background-color: transparent;                                                -fx-text-fill: #38bdf8;                                                -fx-font-size: 12px;                                                -fx-font-weight: bold;                                                -fx-background-radius: 999;                                                -fx-border-radius: 999;                                                -fx-border-color: #38bdf8;                                                -fx-padding: 5 18 5 18;" text="Sign up" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
