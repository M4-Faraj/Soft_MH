<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/24"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.Code.GSignUpControler"
            prefWidth="900.0" prefHeight="550.0"
            style="-fx-background-color: #020617;">

    <children>
        <!-- Main layout: left (form) + right (photo/color) -->
        <HBox prefWidth="900.0" prefHeight="550.0"
              alignment="CENTER_LEFT">
            <padding>
                <Insets left="40.0" right="0.0" top="0.0" bottom="0.0"/>
            </padding>

            <children>

                <!-- LEFT SIDE: title + signup card -->
                <VBox spacing="25.0"
                      prefWidth="520.0"
                      alignment="CENTER_LEFT">
                    <children>

                        <!-- App title -->
                        <Label text="MH Library System"
                               style="-fx-text-fill: #e5e7eb;
                                      -fx-font-size: 28px;
                                      -fx-font-weight: bold;"/>

                        <!-- Signup card -->
                        <VBox spacing="15.0"
                              maxWidth="420.0"
                              style="-fx-background-color: #0b1120;
                                     -fx-background-radius: 18;
                                     -fx-padding: 24;
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.55), 18, 0.2, 0, 4);">
                            <children>

                                <Label text="Create Account"
                                       style="-fx-text-fill: #e5e7eb;
                                              -fx-font-size: 22px;
                                              -fx-font-weight: bold;"/>

                                <Region prefHeight="5.0"/>

                                <!-- Full Name -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Full Name"
                                               style="-fx-text-fill: #cbd5f5;
                                                      -fx-font-size: 13px;"/>
                                        <TextField fx:id="txtFullName"
                                                   promptText="Enter your full name"
                                                   style="-fx-background-color: #020617;
                                                          -fx-background-radius: 10;
                                                          -fx-text-fill: #e5e7eb;
                                                          -fx-prompt-text-fill: #6b7280;
                                                          -fx-border-color: #1d4ed8;
                                                          -fx-border-radius: 10;
                                                          -fx-border-width: 1;"/>
                                    </children>
                                </VBox>

                                <!-- Username -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Username"
                                               style="-fx-text-fill: #cbd5f5;
                                                      -fx-font-size: 13px;"/>
                                        <TextField fx:id="txtUsername"
                                                   promptText="Choose a username"
                                                   style="-fx-background-color: #020617;
                                                          -fx-background-radius: 10;
                                                          -fx-text-fill: #e5e7eb;
                                                          -fx-prompt-text-fill: #6b7280;
                                                          -fx-border-color: #1d4ed8;
                                                          -fx-border-radius: 10;
                                                          -fx-border-width: 1;"/>
                                    </children>
                                </VBox>

                                <!-- Email -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Email"
                                               style="-fx-text-fill: #cbd5f5;
                                                      -fx-font-size: 13px;"/>
                                        <TextField fx:id="txtEmail"
                                                   promptText="Enter your email"
                                                   style="-fx-background-color: #020617;
                                                          -fx-background-radius: 10;
                                                          -fx-text-fill: #e5e7eb;
                                                          -fx-prompt-text-fill: #6b7280;
                                                          -fx-border-color: #1d4ed8;
                                                          -fx-border-radius: 10;
                                                          -fx-border-width: 1;"/>
                                    </children>
                                </VBox>

                                <!-- Phone (optional) -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Phone (optional)"
                                               style="-fx-text-fill: #cbd5f5;
                                                      -fx-font-size: 13px;"/>
                                        <TextField fx:id="txtPhone"
                                                   promptText="Enter your phone number"
                                                   style="-fx-background-color: #020617;
                                                          -fx-background-radius: 10;
                                                          -fx-text-fill: #e5e7eb;
                                                          -fx-prompt-text-fill: #6b7280;
                                                          -fx-border-color: #1d4ed8;
                                                          -fx-border-radius: 10;
                                                          -fx-border-width: 1;"/>
                                    </children>
                                </VBox>

                                <!-- Password -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Password"
                                               style="-fx-text-fill: #cbd5f5;
                                                      -fx-font-size: 13px;"/>
                                        <PasswordField fx:id="txtPassword"
                                                       promptText="Enter a password"
                                                       style="-fx-background-color: #020617;
                                                              -fx-background-radius: 10;
                                                              -fx-text-fill: #e5e7eb;
                                                              -fx-prompt-text-fill: #6b7280;
                                                              -fx-border-color: #1d4ed8;
                                                              -fx-border-radius: 10;
                                                              -fx-border-width: 1;"/>
                                    </children>
                                </VBox>

                                <!-- Confirm Password -->
                                <VBox spacing="5.0">
                                    <children>
                                        <Label text="Confirm Password"
                                               style="-fx-text-fill: #cbd5f5;
                                                      -fx-font-size: 13px;"/>
                                        <PasswordField fx:id="txtConfirmPassword"
                                                       promptText="Re-enter your password"
                                                       style="-fx-background-color: #020617;
                                                              -fx-background-radius: 10;
                                                              -fx-text-fill: #e5e7eb;
                                                              -fx-prompt-text-fill: #6b7280;
                                                              -fx-border-color: #1d4ed8;
                                                              -fx-border-radius: 10;
                                                              -fx-border-width: 1;"/>
                                    </children>
                                </VBox>

                                <!-- Error / info label -->
                                <Label fx:id="lblError"
                                       text=""
                                       wrapText="true"
                                       style="-fx-text-fill: #f97316;
                                              -fx-font-size: 11px;"/>

                                <!-- Buttons row -->
                                <!-- Buttons row -->
                                <HBox spacing="10.0" alignment="CENTER_RIGHT">
                                    <children>
                                        <Button fx:id="btnBackToLogin"
                                                text="Back to Login"
                                                onAction="#onBackToLogin"
                                                style="-fx-background-color: transparent;
                       -fx-text-fill: #9ca3af;
                       -fx-font-size: 13px;
                       -fx-border-color: #4b5563;
                       -fx-border-radius: 999;
                       -fx-background-radius: 999;
                       -fx-padding: 6 16 6 16;"/>

                                        <Button fx:id="btnCreateAccount"
                                                text="Create Account"
                                                defaultButton="true"
                                                onAction="#onCreate"
                                                style="-fx-background-color: #16a34a;
                       -fx-text-fill: #f9fafb;
                       -fx-font-size: 13px;
                       -fx-font-weight: bold;
                       -fx-background-radius: 999;
                       -fx-padding: 8 22 8 22;"/>
                                    </children>
                                    <padding>
                                        <Insets top="10.0"/>
                                    </padding>
                                </HBox>

                            </children>
                        </VBox>
                    </children>
                </VBox>

                <!-- RIGHT SIDE: photo / colored panel -->
                <AnchorPane prefWidth="340.0" prefHeight="550.0"
                            style="-fx-background-color: linear-gradient(to bottom right, #020617, #1e293b);">
                    <children>
                        <ImageView fx:id="imgSideSignup"
                                   fitWidth="340.0" fitHeight="550.0"
                                   preserveRatio="true"
                                   pickOnBounds="true"
                                   opacity="0.92">
                            <image>
                                <!-- غيّر مسار الصورة حسب مشروعك -->
                            </image>
                        </ImageView>
                    </children>
                </AnchorPane>

            </children>
        </HBox>
    </children>
</AnchorPane>
