<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="1100.0" style="-fx-background-color: #020617;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.Code.GUserControl">

    <!-- TOP BAR -->
    <top>
        <HBox spacing="10.0" style="-fx-background-color: #020617; -fx-padding: 12 24 12 24;">
            <children>
                <Label style="-fx-text-fill: #e5e7eb;                               -fx-font-size: 24px;                               -fx-font-weight: bold;" text="MH Library - User Portal" />

                <Region HBox.hgrow="ALWAYS" />

                <Label fx:id="lblCurrentUser" style="-fx-text-fill: #9ca3af;                               -fx-font-size: 13px;" text="Welcome, User" />

                <Button fx:id="btnLogout" style="-fx-background-color: #b91c1c;                                -fx-text-fill: #f9fafb;                                -fx-font-size: 13px;                                -fx-font-weight: bold;                                -fx-background-radius: 999;                                -fx-padding: 6 16 6 16;" text="Logout" />
            </children>
        </HBox>
    </top>

    <!-- RIGHT DECORATIVE PANEL (OPTIONAL IMAGE) -->
    <right>
        <AnchorPane prefWidth="260.0" style="-fx-background-color: linear-gradient(to bottom, #020617, #111827);">
            <children>
                <ImageView fx:id="imgSide" fitHeight="650.0" fitWidth="260.0" opacity="0.9" pickOnBounds="true" preserveRatio="true">
                    <image>
                    </image>
                </ImageView>

                <VBox layoutX="20.0" layoutY="460.0" spacing="6.0">
                    <children>
                        <Label style="-fx-text-fill: #e5e7eb;                                       -fx-font-size: 16px;                                       -fx-font-weight: bold;" text="Keep reading..." />
                        <Label maxWidth="220.0" style="-fx-text-fill: #9ca3af;                                       -fx-font-size: 12px;" text="A room without books is like a body without a soul." wrapText="true" />
                    </children>
                </VBox>
            </children>
        </AnchorPane>
    </right>

    <!-- CENTER: TABS WITH ALL USER FUNCTIONS -->
    <center>
        <TabPane fx:id="tabPane" style="-fx-padding: 12 12 12 12;" tabClosingPolicy="UNAVAILABLE">
            <tabs>

                <!-- TAB 1: SEARCH & BROWSE -->
                <Tab text="Search Browse">
                    <content>
                        <VBox spacing="18.0" style="-fx-padding: 16 12 16 12;">
                            <children>

                                <!-- SEARCH & FILTER SECTION -->
                                <VBox spacing="10.0">
                                    <children>
                                        <Label style="-fx-text-fill: #e5e7eb;                                                       -fx-font-size: 16px;                                                       -fx-font-weight: bold;" text="Search Books" />

                                        <HBox spacing="10.0">
                                            <children>
                                                <TextField fx:id="txtSearch" promptText="Search by title, author, ISBN..." style="-fx-background-color: #020617;                                                                   -fx-background-radius: 10;                                                                   -fx-text-fill: #e5e7eb;                                                                   -fx-prompt-text-fill: #6b7280;                                                                   -fx-border-color: #1d4ed8;                                                                   -fx-border-radius: 10;                                                                   -fx-border-width: 1;" HBox.hgrow="ALWAYS" />

                                                <ComboBox fx:id="cmbFilterType" prefWidth="150.0" promptText="Filter by" style="-fx-background-color: #020617;                                                                  -fx-text-fill: #e5e7eb;                                                                  -fx-border-color: #374151;                                                                  -fx-border-radius: 8;                                                                  -fx-background-radius: 8;" />

                                                <Button fx:id="btnSearch" style="-fx-background-color: #1d4ed8;                                                                -fx-text-fill: #f9fafb;                                                                -fx-font-size: 13px;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 10;                                                                -fx-padding: 8 18 8 18;" text="Search" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <!-- BOOKS TABLE + ACTIONS -->
                                <VBox spacing="8.0" VBox.vgrow="ALWAYS">
                                    <children>
                                        <Label style="-fx-text-fill: #9ca3af;                                                       -fx-font-size: 13px;" text="Available Books" />

                                        <TableView fx:id="tblBooks" style="-fx-background-color: #020617;                                                           -fx-border-color: #111827;                                                           -fx-border-radius: 8;                                                           -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
                                            <columns>
                                                <TableColumn fx:id="colBookId" prefWidth="60.0" text="ID" />
                                                <TableColumn fx:id="colTitle" prefWidth="230.0" text="Title" />
                                                <TableColumn fx:id="colAuthor" prefWidth="160.0" text="Author" />
                                                <TableColumn fx:id="colCategory" prefWidth="120.0" text="Category" />
                                                <TableColumn fx:id="colYear" prefWidth="70.0" text="Year" />
                                                <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                                            </columns>
                                        </TableView>

                                        <!-- Actions on selected book -->
                                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                            <children>
                                                <Label fx:id="lblSelectedBook" style="-fx-text-fill: #9ca3af;                                                               -fx-font-size: 12px;" text="No book selected" HBox.hgrow="ALWAYS" />

                                                <Button fx:id="btnBorrow" onAction="#onBorrow" style="-fx-background-color: #16a34a;                                                                -fx-text-fill: #f9fafb;                                                                -fx-font-size: 13px;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 999;                                                                -fx-padding: 6 16 6 16;" text="Borrow" />

                                                <Button fx:id="btnReserve" onAction="#onReserve" style="-fx-background-color: #f97316;                                                                -fx-text-fill: #0f172a;                                                                -fx-font-size: 13px;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 999;                                                                -fx-padding: 6 16 6 16;" text="Reserve" />

                                                <Button fx:id="btnAddFavourite" style="-fx-background-color: transparent;                                                                -fx-text-fill: #38bdf8;                                                                -fx-font-size: 13px;                                                                -fx-font-weight: bold;                                                                -fx-background-radius: 999;                                                                -fx-border-radius: 999;                                                                -fx-border-color: #38bdf8;                                                                -fx-padding: 6 16 6 16;" text="Add to Favourites" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                            </children>
                        </VBox>
                    </content>
                </Tab>

                <!-- TAB 2: MY LOANS -->
                <Tab text="My Loans">
                    <content>
                        <VBox spacing="12.0" style="-fx-padding: 16 12 16 12;">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label style="-fx-text-fill: #e5e7eb;                                                       -fx-font-size: 15px;                                                       -fx-font-weight: bold;" text="My Current Loans" />
                                        <Label fx:id="lblLoansCount" style="-fx-text-fill: #9ca3af;                                                       -fx-font-size: 12px;" text="(0 items)" />
                                    </children>
                                </HBox>

                                <TableView fx:id="tblLoans" style="-fx-background-color: #020617;                                                   -fx-border-color: #111827;                                                   -fx-border-radius: 8;                                                   -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colLoanBookTitle" prefWidth="230.0" text="Title" />
                                        <TableColumn fx:id="colLoanAuthor" prefWidth="160.0" text="Author" />
                                        <TableColumn fx:id="colLoanStart" prefWidth="120.0" text="Borrowed On" />
                                        <TableColumn fx:id="colLoanDue" prefWidth="120.0" text="Due Date" />
                                        <TableColumn fx:id="colLoanStatus" prefWidth="100.0" text="Status" />
                                    </columns>
                                </TableView>

                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnReturn" style="-fx-background-color: #ef4444;                                                        -fx-text-fill: #f9fafb;                                                        -fx-font-size: 13px;                                                        -fx-font-weight: bold;                                                        -fx-background-radius: 999;                                                        -fx-padding: 6 18 6 18;" text="Return Selected" />

                                        <Button fx:id="btnRenew" onAction="#onRenew" style="-fx-background-color: #1d4ed8;                                                        -fx-text-fill: #f9fafb;                                                        -fx-font-size: 13px;                                                        -fx-font-weight: bold;                                                        -fx-background-radius: 999;                                                        -fx-padding: 6 18 6 18;" text="Renew Selected" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <!-- TAB 3: RESERVATIONS -->
                <Tab text="Reservations">
                    <content>
                        <VBox spacing="12.0" style="-fx-padding: 16 12 16 12;">
                            <children>
                                <Label style="-fx-text-fill: #e5e7eb;                                               -fx-font-size: 15px;                                               -fx-font-weight: bold;" text="My Reservations" />

                                <TableView fx:id="tblReservations" style="-fx-background-color: #020617;                                                   -fx-border-color: #111827;                                                   -fx-border-radius: 8;                                                   -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colResBookTitle" prefWidth="230.0" text="Title" />
                                        <TableColumn fx:id="colResAuthor" prefWidth="160.0" text="Author" />
                                        <TableColumn fx:id="colResDate" prefWidth="120.0" text="Reserved On" />
                                        <TableColumn fx:id="colResStatus" prefWidth="100.0" text="Status" />
                                    </columns>
                                </TableView>

                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnCancelReservation" style="-fx-background-color: #ef4444;                                                        -fx-text-fill: #f9fafb;                                                        -fx-font-size: 13px;                                                        -fx-font-weight: bold;                                                        -fx-background-radius: 999;                                                        -fx-padding: 6 18 6 18;" text="Cancel Selected" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <!-- TAB 4: FAVOURITES -->
                <Tab text="Favourites">
                    <content>
                        <VBox spacing="12.0" style="-fx-padding: 16 12 16 12;">
                            <children>
                                <Label style="-fx-text-fill: #e5e7eb;                                               -fx-font-size: 15px;                                               -fx-font-weight: bold;" text="My Favourite Books" />

                                <TableView fx:id="tblFavourites" style="-fx-background-color: #020617;                                                   -fx-border-color: #111827;                                                   -fx-border-radius: 8;                                                   -fx-background-radius: 8;" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="colFavBookTitle" prefWidth="230.0" text="Title" />
                                        <TableColumn fx:id="colFavAuthor" prefWidth="160.0" text="Author" />
                                        <TableColumn fx:id="colFavCategory" prefWidth="120.0" text="Category" />
                                    </columns>
                                </TableView>

                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnRemoveFavourite" style="-fx-background-color: #ef4444;                                                        -fx-text-fill: #f9fafb;                                                        -fx-font-size: 13px;                                                        -fx-font-weight: bold;                                                        -fx-background-radius: 999;                                                        -fx-padding: 6 18 6 18;" text="Remove Selected" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>

                <!-- TAB 5: PROFILE -->
                <Tab text="Profile">
                    <content>
                        <VBox spacing="14.0" style="-fx-padding: 20 18 20 18;">
                            <children>
                                <Label style="-fx-text-fill: #e5e7eb;                                               -fx-font-size: 16px;                                               -fx-font-weight: bold;" text="User Profile" />

                                <GridPane hgap="12.0" vgap="10.0">
                                    <columnConstraints>
                                        <ColumnConstraints halignment="RIGHT" prefWidth="120.0" />
                                        <ColumnConstraints prefWidth="250.0" />
                                    </columnConstraints>
                                    <children>
                                        <Label style="-fx-text-fill: #d1d5db;" text="Full Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                        <TextField fx:id="txtFullName" style="-fx-background-color: #020617;                                                           -fx-background-radius: 8;                                                           -fx-text-fill: #e5e7eb;                                                           -fx-border-color: #374151;                                                           -fx-border-radius: 8;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                        <Label style="-fx-text-fill: #d1d5db;" text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                        <TextField fx:id="txtProfileUsername" editable="false" style="-fx-background-color: #020617;                                                           -fx-background-radius: 8;                                                           -fx-text-fill: #e5e7eb;                                                           -fx-border-color: #374151;                                                           -fx-border-radius: 8;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                        <Label style="-fx-text-fill: #d1d5db;" text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                        <TextField fx:id="txtEmail" style="-fx-background-color: #020617;                                                           -fx-background-radius: 8;                                                           -fx-text-fill: #e5e7eb;                                                           -fx-border-color: #374151;                                                           -fx-border-radius: 8;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                        <Label style="-fx-text-fill: #d1d5db;" text="Phone:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                        <TextField fx:id="txtPhone" style="-fx-background-color: #020617;                                                           -fx-background-radius: 8;                                                           -fx-text-fill: #e5e7eb;                                                           -fx-border-color: #374151;                                                           -fx-border-radius: 8;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                        <Label style="-fx-text-fill: #d1d5db;" text="Address:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                        <TextField fx:id="txtAddress" style="-fx-background-color: #020617;                                                           -fx-background-radius: 8;                                                           -fx-text-fill: #e5e7eb;                                                           -fx-border-color: #374151;                                                           -fx-border-radius: 8;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    </children>
                           <rowConstraints>
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                              <RowConstraints />
                           </rowConstraints>
                                </GridPane>

                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnChangePassword" style="-fx-background-color: transparent;                                                        -fx-text-fill: #38bdf8;                                                        -fx-font-size: 13px;                                                        -fx-font-weight: bold;                                                        -fx-background-radius: 999;                                                        -fx-border-radius: 999;                                                        -fx-border-color: #38bdf8;                                                        -fx-padding: 6 18 6 18;" text="Change Password" />

                                        <Button fx:id="btnSaveProfile" style="-fx-background-color: #16a34a;                                                        -fx-text-fill: #f9fafb;                                                        -fx-font-size: 13px;                                                        -fx-font-weight: bold;                                                        -fx-background-radius: 999;                                                        -fx-padding: 6 18 6 18;" text="Save Changes" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </content>
                </Tab>

            </tabs>
        </TabPane>
    </center>

</BorderPane>
