<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane xmlns="http://javafx.com/javafx/24"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="mh.ui.LoginController"
            prefWidth="900.0" prefHeight="550.0"
            style="-fx-background-color: #020617;">

    <!-- Center container -->
    <children>
        <VBox alignment="CENTER"
              spacing="20.0"
              prefWidth="900.0" prefHeight="550.0">

            <!-- App title -->
            <children>
                <Label text="MH Library System"
                       style="-fx-text-fill: #e5e7eb; -fx-font-size: 32px; -fx-font-weight: bold;"/>

                <!-- Card -->
                <VBox spacing="15.0"
                      maxWidth="380.0"
                      style="-fx-background-color: #0b1120;
                             -fx-background-radius: 18;
                             -fx-padding: 28;
                             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.55), 18, 0.2, 0, 4);">

                    <children>
                        <!-- Subtitle -->
                        <Label text="Login"
                               style="-fx-text-fill: #e5e7eb; -fx-font-size: 22px; -fx-font-weight: bold;"/>

                        <!-- Small space -->
                        <Region prefHeight="5.0"/>

                        <!-- Username -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Username"
                                       style="-fx-text-fill: #cbd5f5; -fx-font-size: 13px;"/>
                                <TextField fx:id="txtUsername"
                                           promptText="Enter your username"
                                           style="-fx-background-color: #020617;
                                                  -fx-background-radius: 10;
                                                  -fx-text-fill: #e5e7eb;
                                                  -fx-prompt-text-fill: #6b7280;
                                                  -fx-border-color: #1d4ed8;
                                                  -fx-border-radius: 10;
                                                  -fx-border-width: 1;"/>
                            </children>
                        </VBox>

                        <!-- Password -->
                        <VBox spacing="5.0">
                            <children>
                                <Label text="Password"
                                       style="-fx-text-fill: #cbd5f5; -fx-font-size: 13px;"/>
                                <PasswordField fx:id="txtPassword"
                                               promptText="Enter your password"
                                               style="-fx-background-color: #020617;
                                                      -fx-background-radius: 10;
                                                      -fx-text-fill: #e5e7eb;
                                                      -fx-prompt-text-fill: #6b7280;
                                                      -fx-border-color: #1d4ed8;
                                                      -fx-border-radius: 10;
                                                      -fx-border-width: 1;"/>
                            </children>
                        </VBox>

                        <!-- Buttons row -->
                        <HBox spacing="10.0" alignment="CENTER_RIGHT">
                            <children>
                                <Button fx:id="btnClear"
                                        text="Clear"
                                        style="-fx-background-color: transparent;
                                               -fx-text-fill: #9ca3af;
                                               -fx-font-size: 13px;
                                               -fx-border-color: #4b5563;
                                               -fx-border-radius: 999;
                                               -fx-background-radius: 999;
                                               -fx-padding: 6 16 6 16;"/>

                                <Button fx:id="btnLogin"
                                        text="Login"
                                        defaultButton="true"
                                        style="-fx-background-color: #1d4ed8;
                                               -fx-text-fill: #f9fafb;
                                               -fx-font-size: 13px;
                                               -fx-font-weight: bold;
                                               -fx-background-radius: 999;
                                               -fx-padding: 8 22 8 22;"/>
                            </children>
                            <padding>
                                <Insets top="10.0"/>
                            </padding>
                        </HBox>

                        <!-- Sign up section -->
                        <VBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Don't have an account?"
                                       style="-fx-text-fill: #9ca3af; -fx-font-size: 12px;"/>
                                <Button fx:id="btnSignup"
                                        text="Sign up"
                                        style="-fx-background-color: transparent;
                                               -fx-text-fill: #38bdf8;
                                               -fx-font-size: 12px;
                                               -fx-font-weight: bold;
                                               -fx-background-radius: 999;
                                               -fx-border-radius: 999;
                                               -fx-border-color: #38bdf8;
                                               -fx-padding: 5 18 5 18;"/>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
